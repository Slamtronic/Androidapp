<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:background="#c0aaf7ff"
     android:padding="16dp"
     android:orientation="vertical">

    <LinearLayout
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_weight="1.4">

        <Button
             android:layout_height="match_parent"
             android:layout_width="0dp"
             android:textSize="13sp"
             android:layout_weight="3"
             android:id="@+id/resignupButton"
             android:text="UNSUBS" />

        <Button
             android:layout_height="match_parent"
             android:layout_width="0dp"
             android:textSize="13sp"
             android:layout_weight="3"
             android:id="@+id/readButton"
             android:text="out" />

    </LinearLayout>

    <ScrollView
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:hint="mwssage"
         android:layout_weight="10">

        <TextView
		
		android:textColor="#300000"
             android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:textSize="13sp"
             android:id="@+id/chat" />

    </ScrollView>

    <LinearLayout
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_weight="1.5">

        <Button
             android:layout_height="match_parent"
             android:layout_width="0dp"
             android:textSize="13sp"
             android:layout_weight="3"
             android:id="@+id/updateButton"
             android:text="send" />

        <EditText
			android:textColorHint="#003000"
		android:textColor="#300000"
		     android:inputType="textEmailAddress"
             android:layout_height="match_parent"
             android:layout_width="0dp"
             android:hint="Enter param1"
             android:textSize="13sp"
             android:layout_weight="10"
             android:id="@+id/param1EditText" />

    </LinearLayout>

    <TextView
			android:textColor="#ff0000"
         android:layout_height="0dp"
         android:layout_width="match_parent"
         android:textAlignment="center"
         android:padding="8dp"
         android:textSize="16sp"
         android:layout_weight="1"
         android:id="@+id/title"
         android:text="FTA CHAT ROOM"
         android:textStyle="bold" />

</LinearLayout>