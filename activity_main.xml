<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.7"
        android:paddingTop="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

          

            <TextView
                android:id="@+id/reqdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="no reqdata"
                android:textSize="12sp"
                android:textStyle="bold"
				android:textColor="#ff1cfffb" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/val"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="#a00000ff"
            android:hint="val"
            android:padding="1dp" 
			/>

        <Button
			android:onClick="add"
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="2dp"
            android:text="add"
            android:textColor="@color/white" />

        <Button
			android:onClick="clear"
            android:id="@+id/clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:padding="2dp"
            android:text="clear"
            android:textColor="#ffa00000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"
        android:orientation="horizontal" >

        <Button
			
            android:onClick="bulk"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="10dp"
            android:text="send BULK"
            android:textColor="#aaaaffaa" />

        <Button
            android:onClick="ctrl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="10dp"
            android:text="send CNTRL"
            android:textColor="@color/teal_200" />
    </LinearLayout>

</LinearLayout>